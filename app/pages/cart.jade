extends /blocks/layout-default/layout-default

include /blocks/topline/topline
include /blocks/header/header
include /blocks/hero/hero

include /blocks/cart/cart

include /blocks/welcome/welcome
include /blocks/footer/footer

include /blocks/popup/popup


block head
	- var pageTitle = 'Главная';

block content
	+header()
		+topline()
		.header__in
			nav.header__nav.nav
				ul.nav__list
					li.nav__item.nav__item_active
						a.nav__link(href="#link") Бренды
					li.nav__item
						a.nav__link(href="#link") Распродажа
					li.nav__item
						a.nav__link(href="#link") Скидки месяца
					li.nav__item
						a.nav__link(href="#link") Эксклюзив
					li.nav__item
						a.nav__link(href="#link") Аксессуары

			a.header__cart.h-cart(href='#link')
				.h-cart__title Корзина :
				.h-cart__w
					.h-cart__quant 1 товар
					.h-cart__amount 3000 руб.
	//- end header

	+hero()

	//- end hero

	main.main
		+cart()

		//- end cart

	//- end main

	+footer()

	.modal-hider.modal.popup
		.modal-inner
			a.popup__close(href="", data-modal-close="") x

			.modal-content


