.sidebar
	margin-left 6px
	padding 10px
	width 304px
	float left
	border 1px solid #45c330
	&__cat
		border 1px solid #c9cbc9
		box-shadow inset 0 0 6px 0 #C9CBC9

.cat
	padding-right 10px
	padding-left 10px
	&__title
		padding-top 15px
		padding-bottom 15px
		font-family $lob
		font-size 30px
		color #282828
		text-align center
	&__list
		border-top 1px solid #c3c5c3
		padding-top 13px
	&__item
		margin-bottom 10px
	&__link
		padding-left 46px
		position relative
		display block
		font-family $lob
		font-size 24px
		color #5a5a5a
		text-decoration none
		line-height 42px
		&:hover
			color #5bb453
		&:after
			position absolute
			top 0
			left 0
			top 50%
			content ''
	&__item_1
		.cat__link
			&:after
				margin-top -12px
				retinaSprite($cat_tv_group)
			&:hover
				&:after
					retinaSprite($cat_tv_hover_group)
		&.cat__item_active
			.cat__link
				&:after
					retinaSprite($cat_tv_hover_group)
	&__item_2
		.cat__link
			&:after
				margin-top -8px
				retinaSprite($cat_aplces_group)
			&:hover
				&:after
					retinaSprite($cat_aplces_hover_group)
		&.cat__item_active
			.cat__link
				&:after
					retinaSprite($cat_aplces_hover_group)
	&__item_3
		.cat__link
			&:after
				margin-top -10px
				retinaSprite($cat_home_group)
			&:hover
				&:after
					retinaSprite($cat_home_hover_group)
		&.cat__item_active
			.cat__link
				&:after
					retinaSprite($cat_home_hover_group)
	&__item_4
		.cat__link
			&:after
				margin-top -9px
				retinaSprite($cat_clothes_group)
			&:hover
				&:after
					retinaSprite($cat_clothes_hover_group)
		&.cat__item_active
			.cat__link
				&:after
					retinaSprite($cat_clothes_hover_group)
	&__item_5
		.cat__link
			&:after
				margin-top -8px
				retinaSprite($cat_gadgets_group)
			&:hover,
			.cat__item_active
				&:after
					retinaSprite($cat_gadgets_hover_group)
		&.cat__item_active
			.cat__link
				&:after
					retinaSprite($cat_gadgets_hover_group)
	&__item_6
		.cat__link
			&:after
				margin-top -11px
				retinaSprite($cat_beauty_group)
			&:hover
				&:after
					retinaSprite($cat_beauty_hover_group)
		&.cat__item_active
			.cat__link
				&:after
					retinaSprite($cat_beauty_hover_group)

	&__item_7
		.cat__link
			&:after
				margin-top -11px
				retinaSprite($cat_stat_group)
			&:hover
				&:after
					retinaSprite($cat_stat_hover_group)

		&.cat__item_active
			.cat__link
				&:after
					retinaSprite($cat_stat_hover_group)

	&__sub
		margin-left 28px
		margin-right 10px
		padding-top 18px
		display none
	&__sub-item
		margin-bottom 30px
		padding-left 20px

	&__sub-link
		position relative
		font-family $osR
		font-family 18px
		line-height 22px
		color #4f504f
		text-decoration none
		&:after
			position absolute
			top 8px
			left -20px
			border 1px solid #abacab
			width 10px
			height 10px
			content ''
			border-radius 50%
	&__sub-item
		&:hover
			.cat__sub-link
				text-decoration underline
	&__sub-item_active
		.cat__sub-link
			text-decoration underline
			&:after
				border 1px solid #5bb453


	&__item_active
		.cat__sub
			display block
		.cat__link
			color #5bb453
