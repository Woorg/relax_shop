/*!
 * Topline
 */


.topline
	background #282828
	&__in
		@extends .in
		max-width 1170px
		font-size 0
	&__phone,
	&__email,
	&__search-form,
	&__social
		display inline-block
		vertical-align top
		color #FFF

	&__phone,
	&__email
		margin-top 7px
		margin-bottom 7px
	&__phone
		margin-right 16px
	&__email
		margin-right 46px
		margin-left 16px

	&__social
		margin-top 15px
		margin-left 20px
		margin-bottom 12px

/*!
 * Phone
 */

.phone
	padding-top 15px
	padding-bottom 12px
	font-family $osL
	font-size 21px
	text-transform uppercase
	&__link
		position relative
		padding-left 57px
		color inherit
		text-decoration none
		letter-spacing tracking(30)
		&:after
			position absolute
			top -4px
			left 0
			content ''
			retinaSprite($phone_icon_group)
	b
		padding-left 5px
		font-family $osB
		font-size 24px
		letter-spacing tracking(30)

/*!
 * Email
 */

.email
	border-left 1px solid #202020
	padding-top 17px
	padding-bottom 14px
	font-size 20px
	&__link
		position relative
		padding-left 57px
		color inherit
		text-decoration none
		&:after
			position absolute
			top 2px
			left 0
			content ''
			retinaSprite($email_icon_group)
/*!
 * Search form
 */

.search-form
	width 413px
	background #191919
	box-shadow inset 0 0 10px 0 rgba(0,0,0, .9)
	&__w
		position relative
	&__input
		border none
		padding-top 20px
		padding-left 26px
		padding-right 80px
		padding-bottom 24px
		width 413px
		font-family $osR
		font-size 20px
		color #fff
		background transparent
		+placeholder()
			color #FFF
	&__submit
		position absolute
		top 22px
		right 22px
		border none
		background transparent
		retinaSprite($search_icon_group)
		hide-text()

/*!
 * Social
 */

.social
	font-size 0
	&__item
		margin-left 22px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
	&__link
		display block
		text-decoration none
		hide-text()
	&__item_vider
		.social__link
			retinaSprite($viber_icon_group)
	&__item_whatsapp
		.social__link
			retinaSprite($whatsup_icon_group)

