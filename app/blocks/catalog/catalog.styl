.catalog
	margin-bottom 8px
	&__list
		font-size 0
	&__item
		border 1px solid #C2C4C2
		margin-right 16px
		margin-bottom 16px
		padding 8px
		width 260px
		display inline-block
		vertical-align top
		text-align center
		transition border .2s ease
		&:hover
			border 1px solid #45c330
		&:nth-child(3n)
			margin-right 0
	&__image
		overflow hidden
		img
			max-width 100%
			height auto
			transform scale(1)
			transition all .4s ease

		&:hover
			img
				transform scale(1.3)
	&__title
		margin-left 10px
		margin-right 10px
		padding-top 8px
		padding-bottom 12px
		font-size 19px
		line-height 26px
		color #5a5a5a
	&__price
		border-top 1px solid #5BB453
		border-bottom 1px solid #5BB453
		margin-bottom 13px
		margin-left 10px
		margin-right 10px
		padding-top 13px
		padding-bottom 10px
		font-family $osB
		font-size 26px
		color #5a5a5a
	&__button
		margin-bottom 5px
		margin-left 10px
		margin-right 10px

