.articles
	background #FFF
	&__in
		@extends .in
		padding-top 35px
		padding-right 58px
		padding-bottom 32px
		padding-left 58px
	&__title
		margin-bottom 38px
		font-family $lob
		font-size 34px
		color #282828
	// &__list
	&__item
		margin-right 32px
		width 320px
	&__link
		display block
		text-decoration none
	&__image
		margin-bottom 24px
		img
			max-width 100%
	&__meta,
	&__item-title
		font-family $lob
		line-height 34px
	&__meta
		font-size 17px
		color #282828
	&__item-title
		font-size 22px
		color #5bb453
	&__text
		margin-bottom 20px
		font-size 17px
		line-height 28px
		color #282828
	&__more
		position relative
		display inline-block
		vertical-align top
		padding-right 56px
		font-size 24px
		color #cccdcb
		text-transform uppercase
		&:after
			position absolute
			top 50%
			right 0
			margin-top -8px
			content ''
			retinaSprite($more_icon_group)

	&__link
		&:hover
			.articles__more
				color #5bb453
				&:after
					retinaSprite($more_icon_hover_group)



	.flickity-prev-next-button
		background-color transparent
		hide-text()
		&:hover
			background-color transparent
		svg
			display none
		&:disabled
			visibility hidden
		&.next
			right -60px
			retinaSprite($arrow_next_group)
			&:hover
				retinaSprite($arrow_next_hover_group)
		&.previous
			left -60px
			retinaSprite($arrow_prev_group)
			&:hover
				retinaSprite($arrow_prev_hover_group)




